                    document.body.appendChild(messageEl);
                }
                
                messageEl.textContent = message;
                messageEl.style.background = type === 'success' ? '#28a745' : '#dc3545';
                messageEl.style.color = 'white';
                
                // Hide after 3 seconds
                setTimeout(() => {
